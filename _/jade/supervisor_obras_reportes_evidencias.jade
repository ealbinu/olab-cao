include _mixins.jade
doctype html
html(lang="es")
	head
		+head("CAO | Directivo")
body
	#all.toggled-right
		header.mainHeader
			+header('Supervisor')
				.container-fluid.bg-info.subtitle.text-info
					.col-xs-4
						.lead Evidencias de obra
					.col-xs-8.text-right
						.row
							form(action="#").form-inline
								.form-group.col-xs-6
									select(name="").form-control.input-sm
										option(disabled selected) Mostrar datos
										option(value="") 1
										option(value="") 2
										option(value="") 3
								.form-group.col-xs-6
									input(type="text", placeholder="Filtrar").form-control.input-sm
							//button.btn.btn-primary.btn-xs
								.fa.fa-refresh <span class="hidden-xs"> Actualizar datos</span>
		+sidebarLeft('supervisor_obra')
		+sidebarRight
		
		
		
				
				
		#page-content-wrapper
			.content-fluid
				.row 
					.col-lg-12
						
						h4
							small.text-success Obra: 
							p
							.fa.fa-angle-right.text-success
							|  Dragado de azolve y rectificación de la Laguna de Regulación Churubusco, zona seca, lado sur.

				.row
					.col-lg-12
						.panel.panel-info
							.panel-body
								div(role="tabpanel")
									ul.nav.nav-tabs
										li.active: a(href="#m1", data-toggle="tab") Evidencia fotográfica
										li: a(href="#m2", data-toggle="tab") Evidencia de video
										li: a(href="#m3", data-toggle="tab") Minutas
									.tab-content
										.tab-pane#m1.active
											br
											.row.limitHeight.scrollable
												-for(var i=0;i<10;i++)
													.col-sm-2
														.thumbnail
															.caption
																p Descripción de la evidencia
																a(href="_/img/avatar_file.png", title="Descripción de la evidencia").imgbox: img(src="_/img/avatar_file.png", alt="")
										.tab-pane#m2
											br
											.row.limitHeight.scrollable
												-for(var i=0;i<10;i++)
													.col-sm-2
														.thumbnail
															.caption
																p Descripción de la evidencia
																a(href="https://youtu.be/-7ml51INtEM", rel="vimeo", title="Video de evidencia").imgbox: img(src="_/img/avatar_video.png", alt="")
										.tab-pane#m3
											br
											.row.limitHeight.scrollable
												-for(var i=0;i<10;i++)
													.col-sm-2
														.thumbnail
															.caption
																p Minuta
																a(href="_/img/avatar_file.png", title="Minuta de la evidencia").imgbox: img(src="_/img/avatar_file.png", alt="")
																

		
		+sharedScripts
		