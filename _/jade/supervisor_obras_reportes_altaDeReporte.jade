body
	#all.toggled-right
		header.mainHeader
			+header('Supervisor')
				.container-fluid.bg-info.subtitle.text-info
					.col-xs-4
						.lead Lista de Reportes
					.col-xs-4
						.row
							span.label.label-primary 1. Maquinaria y Personal
							|  
							span.label 2. Evidencias
