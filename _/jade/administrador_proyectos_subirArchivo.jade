include _mixins.jade
doctype html
html(lang="es")
	head
		+head("CAO | Administrador")
body
	#all.toggled-right
		header.mainHeader
			+header('Administrador')
				.container-fluid.bg-info.subtitle.text-info
					.col-xs-12
						.lead Subir archivos en proyecto
					
		+sidebarLeft('administrador')
		+sidebarRight
		
		
		
			
				
				
		#page-content-wrapper
			.content-fluid
				.row
					.col-lg-8.col-lg-push-2
						
						.panel.panel-primary
							.panel-heading.posr
								i.fa.fa-file-image-o  Seleccione un Proyecto
								span.label.label-success.lt 1
							.panel-body
								form(action="#")
									select(name="", onchange="cambio()" ).form-control#obraselect
										option(value="", selected, disabled) Proyectos actuales
										option(value="0") Obras en el lago de Texcoco
							.panel-heading.posr
								i.fa.fa-upload  Arrastre un archivo para cargarlo al proyecto
								span.label.label-success.lt 2
							.panel-body
								form.dropzone#administrador_subirArchivo(action="#")
									.dz-message Arrastre o de click
							.panel-footer: i.fa.fa-file  Archivos soportados: .pdf, .xls, .xlsx, .png, .jpg. jpeg
		

		+sharedScripts
